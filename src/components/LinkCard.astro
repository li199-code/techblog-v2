---
// CardLink.astro
interface Props {
  link: string;
  title?: string;
  description?: string;
}

const { link, title = "Êó†Ê†áÈ¢ò", description = "ÊöÇÊó†ÊèèËø∞" } = Astro.props;
const domain = new URL(link).hostname;
---

<div class="card-link">
  <a href={link} target="_blank" rel="noopener noreferrer">
    <div class="card-decorator"></div>
    <div class="card-content">
      <div class="card-header">
        <svg class="link-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"></path>
          <path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"></path>
        </svg>
        <h3>{title}</h3>
      </div>
      <p class="description">{description}</p>
      <div class="card-footer">
        <span class="domain">{domain}</span>
        <svg class="arrow-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <line x1="7" y1="17" x2="17" y2="7"></line>
          <polyline points="7 7 17 7 17 17"></polyline>
        </svg>
      </div>
    </div>
  </a>
</div>

<style>
  .card-link {
    position: relative;
    width: 100%;
    margin: 1.5rem 0;
    border-radius: 12px;
    overflow: hidden;
    background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
    border: 1px solid rgba(0, 0, 0, 0.08);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .card-link::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(99, 102, 241, 0.1), rgba(168, 85, 247, 0.1));
    opacity: 0;
    transition: opacity 0.3s ease;
    pointer-events: none;
  }

  .card-link:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
    border-color: rgba(99, 102, 241, 0.3);
  }

  .card-link:hover::before {
    opacity: 1;
  }

  .card-link:hover .arrow-icon {
    transform: translate(2px, -2px);
    opacity: 1;
  }

  .card-link:hover .card-decorator {
    background: linear-gradient(180deg, #6366f1 0%, #a855f7 100%);
  }

  .card-decorator {
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 4px;
    background: linear-gradient(180deg, #94a3b8 0%, #cbd5e1 100%);
    transition: background 0.3s ease;
  }

  .card-content {
    padding: 1.25rem 1.5rem;
    margin-left: 4px;
  }

  .card-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 0.75rem;
  }

  .link-icon {
    width: 20px;
    height: 20px;
    color: #6366f1;
    flex-shrink: 0;
  }

  h3 {
    margin: 0;
    font-size: 1.15rem;
    font-weight: 600;
    color: #1e293b;
    line-height: 1.4;
  }

  .description {
    margin: 0 0 0.75rem 0;
    color: #64748b;
    font-size: 0.95rem;
    line-height: 1.6;
  }

  .card-footer {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .domain {
    font-size: 0.85rem;
    color: #94a3b8;
    font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, monospace;
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
  }

  .domain::before {
    content: 'üîó';
    font-size: 0.9rem;
  }

  .arrow-icon {
    width: 16px;
    height: 16px;
    color: #6366f1;
    opacity: 0.6;
    transition: all 0.3s ease;
  }

  a {
    text-decoration: none;
    display: block;
    color: inherit;
  }

  /* ÊöóËâ≤Ê®°ÂºèÊîØÊåÅ */
  @media (prefers-color-scheme: dark) {
    .card-link {
      background: linear-gradient(135deg, #1e293b 0%, #0f172a 100%);
      border-color: rgba(255, 255, 255, 0.1);
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
    }

    .card-link::before {
      background: linear-gradient(135deg, rgba(99, 102, 241, 0.15), rgba(168, 85, 247, 0.15));
    }

    .card-link:hover {
      border-color: rgba(99, 102, 241, 0.5);
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.5);
    }

    h3 {
      color: #f1f5f9;
    }

    .description {
      color: #94a3b8;
    }

    .domain {
      color: #64748b;
    }
  }
</style>
