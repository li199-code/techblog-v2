---
// CardLink.astro
interface Props {
  link: string; // 将 url 改为 link
  title?: string;
  description?: string;
}

const { link, title = "无标题", description = "暂无描述" } = Astro.props; // 修改参数名
const domain = new URL(link).hostname; // 修改为使用 link
---

<div class="card-link">
  <a href={link} target="_blank" rel="noopener noreferrer">
    <!-- 修改为使用 link -->
    <div class="card-content">
      <h3>{title} <span class="domain">({domain})</span></h3>
      <p>{description}</p>
      <span class="url">{link}</span>
      <!-- 修改为使用 link -->
    </div>
  </a>
</div>

<style>
  .card-link {
    width: 100%;
    background-color: #f5f5f5;
    margin: 1rem 0;
    border: 1px solid #eee;
    border-radius: 8px;
    overflow: hidden;
    transition: all 0.2s ease;
  }

  .card-link:hover {
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    transform: translateY(-2px);
  }

  .card-content {
    padding: 1rem;
  }

  h3 {
    margin: 0 0 0.5rem 0;
    font-size: 1.2rem;
    color: #333;
  }

  .domain {
    font-size: 0.9rem;
    color: #666;
  }

  p {
    margin: 0.5rem 0;
    color: #555;
    font-size: 0.95rem;
  }

  .url {
    display: block;
    color: #0066cc;
    font-size: 0.85rem;
    word-break: break-all;
  }

  a {
    text-decoration: none;
    display: block;
  }
</style>
